                android:layout_margin="8dp" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="J"
                android:textSize="@dimen/text_large"
                android:textColor="@color/letters_color"
                android:id="@+id/letter_j"
               android:shadowColor="@color/shadow_color_for_levels"
            android:shadowRadius="3"
             android:shadowDy="-3"
            android:shadowDx="-3"
                android:background="@android:color/holo_blue_dark"
                android:layout_margin="8dp" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="K"
                android:textSize="@dimen/text_large"
                android:textColor="@color/letters_color"
                android:id="@+id/letter_k"
               android:shadowColor="@color/shadow_color_for_levels"
            android:shadowRadius="3"
             android:shadowDy="-3"
            android:shadowDx="-3"
                android:background="@android:color/holo_blue_dark"
                android:layout_margin="8dp" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="L"
                android:textSize="@dimen/text_large"
                android:textColor="@color/letters_color"
                android:id="@+id/letter_l"
               android:shadowColor="@color/shadow_color_for_levels"
            android:shadowRadius="3"
             android:shadowDy="-3"
            android:shadowDx="-3"
                android:background="@android:color/holo_blue_dark"
                android:layout_margin="8dp" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="M"
                android:textSize="@dimen/text_large"
                android:textColor="@color/letters_color"
                android:id="@+id/letter_m"
               android:shadowColor="@color/shadow_color_for_levels"
            android:shadowRadius="3"
             android:shadowDy="-3"
            android:shadowDx="-3"
                android:background="@android:color/holo_blue_dark"
                android:layout_margin="8dp" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="N"
