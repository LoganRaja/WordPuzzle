<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_dark"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:id="@+id/full_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".75"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_border_purple"
        android:gravity="center">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_large"
            android:textAllCaps="false"
            android:background="@drawable/blueleft"
            android:textColor="@color/white"
            android:id="@+id/previous"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:visibility="visible"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/white"
            android:text="Level"
            android:gravity="center"
            android:id="@+id/level"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/text_large"
            android:textAllCaps="false"
            android:background="@drawable/blueright"
            android:textColor="@color/white"
            android:id="@+id/next"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3"
        android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:padding="@dimen/padding_small"
        android:id="@+id/hint1"
        android:text=""
        android:textSize="@dimen/text_small"
        android:textColor="@color/white"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            android:id="@+id/hint2"
            android:visibility="invisible"
            android:textSize="@dimen/text_small"
            android:textColor="@color/white"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:padding="@dimen/padding_small"
        android:id="@+id/hint3"
        android:textSize="@dimen/text_small"
        android:textColor="@color/white"
        />
        </LinearLayout>
<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight=".75"
    android:fillViewport="true">
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:visibility="visible"
        android:textSize="@dimen/text_small"
        android:textColor="@color/white"
        android:text="The word length is "
        android:id="@+id/word"
        android:gravity="center"
        />
   </HorizontalScrollView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".75"
            android:inputType="text"
            android:gravity="center"
            android:id="@+id/edit_text"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginRight="@dimen/padding_small"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGKHIJKLMNOPQRSTUVWXYZ"/>

        <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".75"
        android:layout_margin="@dimen/margin"
        android:text="Sumbit"
        android:id="@+id/summit"
        android:textSize="@dimen/text_medium"
        android:textAllCaps="false"
        android:focusable="false"
        android:background="@drawable/rectangle_border_red"
        android:textColor="@color/white"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight=".75"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingRight="@dimen/padding"
    android:weightSum="10"
    android:paddingLeft="@dimen/padding">
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginRight="@dimen/padding_small"
        android:text="1"
        android:id="@+id/id1"
        android:textSize="@dimen/text_medium"
        android:textAllCaps="false"
        android:background="@drawable/round"
        android:textColor="@color/white"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="2"
        android:id="@+id/id2"
        android:textSize="@dimen/text_medium"
        android:layout_marginRight="@dimen/padding_small"
        android:textAllCaps="false"
        android:background="@drawable/round"
        android:textColor="@color/white"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="3"
        android:id="@+id/id3"
        android:layout_marginRight="@dimen/padding_small"
        android:textSize="@dimen/text_medium"
        android:textAllCaps="false"
        android:background="@drawable/round"
        android:textColor="@color/white"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginRight="@dimen/padding_small"
        android:text="4"
        android:id="@+id/id4"
        android:textSize="@dimen/text_medium"
        android:textAllCaps="false"
        android:background="@drawable/round"
        android:textColor="@color/white"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="5"
        android:id="@+id/id5"
        android:textSize="@dimen/text_medium"
        android:textAllCaps="false"
        android:background="@drawable/round"
        android:textColor="@color/white"
        />
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".75"
        android:visibility="visible"
        android:gravity="center"
        android:textSize="@dimen/text_large"
        android:text="Score"
        android:id="@+id/score"
        android:shadowRadius="3"
        android:shadowColor="@color/black"
        android:shadowDy="-7"
        android:textColor="@color/white"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        android:visibility="gone"
        android:background="@drawable/background"
        android:weightSum="5"
        android:id="@+id/letter_layout"
        >
        <LinearLayout
