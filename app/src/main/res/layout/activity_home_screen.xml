                android:shadowDy="-3"
                android:shadowDx="-3"
                android:background="@android:color/holo_blue_dark"
                android:layout_margin="8dp" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="D"
                android:textSize="@dimen/text_large"
                android:textColor="@color/letters_color"
                android:id="@+id/letter_d"
                android:shadowColor="@color/shadow_color_for_levels"
                android:shadowRadius="3"
                android:shadowDy="-3"
                android:shadowDx="-3"
                android:background="@android:color/holo_blue_dark"
                android:layout_margin="8dp" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="E"
                android:textSize="@dimen/text_large"
                android:textColor="@color/letters_color"
                android:id="@+id/letter_e"
                android:shadowColor="@color/shadow_color_for_levels"
                android:shadowRadius="3"
                android:shadowDy="-3"
                android:shadowDx="-3"
                android:background="@android:color/holo_blue_dark"
                android:layout_margin="8dp" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="F"
                android:textSize="@dimen/text_large"
                android:textColor="@color/letters_color"
                android:id="@+id/letter_f"
                android:shadowColor="@color/shadow_color_for_levels"
                android:shadowRadius="3"
                android:shadowDy="-3"
                android:shadowDx="-3"
                android:background="@android:color/holo_blue_dark"
                android:layout_margin="8dp" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="G"
                android:textSize="@dimen/text_large"
                android:textColor="@color/letters_color"
                android:id="@+id/letter_g"
                android:shadowColor="@color/shadow_color_for_levels"
                android:shadowRadius="3"
                android:shadowDy="-3"
                android:shadowDx="-3"
                android:background="@android:color/holo_blue_dark"
                android:layout_margin="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
