                android:background="@android:color/holo_blue_dark"
                android:layout_margin="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="O"
                android:textSize="@dimen/text_large"
                android:textColor="@color/letters_color"
                android:id="@+id/letter_o"
               android:shadowColor="@color/shadow_color_for_levels"
            android:shadowRadius="3"
             android:shadowDy="-3"
            android:shadowDx="-3"
                android:background="@android:color/holo_blue_dark"
                android:layout_margin="8dp" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="P"
                android:textSize="@dimen/text_large"
                android:textColor="@color/letters_color"
                android:id="@+id/letter_p"
               android:shadowColor="@color/shadow_color_for_levels"
            android:shadowRadius="3"
             android:shadowDy="-3"
            android:shadowDx="-3"
                android:background="@android:color/holo_blue_dark"
                android:layout_margin="8dp" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Q"
                android:textSize="@dimen/text_large"
                android:textColor="@color/letters_color"
                android:id="@+id/letter_q"
               android:shadowColor="@color/shadow_color_for_levels"
            android:shadowRadius="3"
             android:shadowDy="-3"
            android:shadowDx="-3"
                android:background="@android:color/holo_blue_dark"
                android:layout_margin="8dp" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="R"
                android:textSize="@dimen/text_large"
                android:textColor="@color/letters_color"
                android:id="@+id/letter_r"
                android:background="@android:color/holo_blue_dark"
                android:layout_margin="8dp"
                android:shadowColor="@android:color/black" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="S"
                android:textSize="@dimen/text_large"
                android:textColor="@color/letters_color"
                android:id="@+id/letter_s"
               android:shadowColor="@color/shadow_color_for_levels"
            android:shadowRadius="3"
             android:shadowDy="-3"
            android:shadowDx="-3"
                android:background="@android:color/holo_blue_dark"
                android:layout_margin="8dp" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="T"
                android:textSize="@dimen/text_large"
                android:textColor="@color/letters_color"
                android:id="@+id/letter_t"
               android:shadowColor="@color/shadow_color_for_levels"
            android:shadowRadius="3"
             android:shadowDy="-3"
            android:shadowDx="-3"
                android:background="@android:color/holo_blue_dark"
