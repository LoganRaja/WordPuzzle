<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    android:background="@color/background_floating_material_dark"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/letter_a"
            android:text="A"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="B"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_b"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDy="-7" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_c"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="D"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_d"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="E"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_e"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="F"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_f"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="G"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_g"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="H"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_h"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="I"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_i"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="J"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_j"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="K"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_k"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="L"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_l"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="M"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_m"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="N"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_n"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="O"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_o"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="P"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_p"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Q"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_q"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="R"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_r"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="S"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_s"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="T"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_t"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="U"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_u"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="7"
        android:gravity="center">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="V"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_v"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="W"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_w"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="X"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_x"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Y"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_y"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Z"
            android:textSize="@dimen/text_large"
            android:textColor="@color/letters_color"
            android:id="@+id/letter_z"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDx=".5"/>
    </LinearLayout>
</LinearLayout>
